<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_shadow_start_color">

    <ImageView
        android:id="@+id/imageDetail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/profilNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="20dp"
        android:text="Caroline"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@id/imageDetail"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/colorBackgroundStar"
        android:src="@drawable/ic_star_white_24dp"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="@id/imageDetail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageDetail" />

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"
        android:background="@android:color/transparent"
        android:tint="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageDetail" />

    <!--Cardview 01 -->
    <android.support.v7.widget.CardView
        android:id="@+id/cardView01"
        app:layout_constraintTop_toBottomOf="@id/imageDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin ="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="6dp">

            <TextView
                android:id="@+id/firstNameDetail"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:text="Caroline"
                android:textColor="@color/colorBlack"/>


            <TextView
                android:id="@+id/addressNumberDetail"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Son adresse"
                android:layout_margin="8dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:drawableTint="@color/colorAccent"/>


            <TextView
                android:id="@+id/phoneNumberDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Son numéro de téléphone"
                android:drawablePadding="8dp"
                android:layout_margin="8dp"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:drawableTint="@color/colorAccent"/>

            <TextView
                android:id="@+id/urlDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Le lien de son site web"
                android:drawablePadding="8dp"
                android:layout_margin="8dp"
                android:drawableLeft="@drawable/ic_baseline_language_24"
                android:drawableTint="@color/colorAccent"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <!-- Cardview 02 -->

    <android.support.v7.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/cardView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin ="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="A propos de moi"

                android:textColor="@color/colorBlack"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/aProposDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="description" />
        </LinearLayout>

    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>




